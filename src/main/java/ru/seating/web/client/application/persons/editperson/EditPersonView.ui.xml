<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:PopupPanel autoHideOnHistoryEventsEnabled="false" autoHideEnabled="false" modal="true" glassEnabled="true">
        <g:HTMLPanel>
            Name : <g:TextBox ui:field="nameTextBox"/><br/>
            Groups: <g:HTMLPanel ui:field="groupsArea"/><br/>
            Sex: <g:RadioButton name="sexRadio" ui:field="sexM" value="M">M</g:RadioButton>
            <g:RadioButton name="sexRadio" ui:field="sexF" value="F">F</g:RadioButton>
            <g:CheckBox ui:field="singleCheckBox" text="Single"></g:CheckBox><br/>
            <g:Image ui:field="closeIcon" url="images/close.png"/><br/>
            <g:Button text="Add" ui:field="addButton"/>
        </g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
